build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  hs-source-dirs:    src
  exposed-modules:   DNIWE.Punt.Interface.Online
                   , DNIWE.Punt.Interface.Offline
                   , DNIWE.Punt.Interface.Protocol
                   , DNIWE.Punt.Solver.Types
                   , DNIWE.Punt.Solver.Score
                   , DNIWE.Punt.Solver.Stupid
                   , DNIWE.Punt.Solver.Game
  build-depends:     base >=4.9 && <4.10
                   , aeson
                   , attoparsec
                   , unordered-containers
                   , containers
                   , bytestring
                   , text
                   , binary
                   , cereal
                   , base64-bytestring
                   , data-default-class
                   , fgl
                   , conduit
                   , conduit-extra
  default-extensions: FlexibleContexts
                    , OverloadedStrings
                    , RecordWildCards
  default-language:  Haskell2010
  ghc-options:       -Wall

executable stupid-solver
  hs-source-dirs:    exe/stupid-solver
  main-is:           Main.hs
  build-depends:     base >= 4.7 && < 5.0
                   , solution
                   , containers
                   , aeson
                   , conduit
                   , transformers
                   , bytestring
                   , data-default-class
  default-extensions: OverloadedStrings
                    , RecordWildCards
                    , LambdaCase
                    , ViewPatterns
                    , ScopedTypeVariables
  default-language:  Haskell2010
  ghc-options:       -Wall

test-suite protocol
  type:              exitcode-stdio-1.0
  hs-source-dirs:    tests/protocol
  main-is:           Main.hs
  build-depends:     base >= 4.7 && < 5.0
                   , solution
                   , hspec
                   , text
                   , directory
                   , filepath
                   , containers
                   , bytestring
                   , aeson
                   , QuickCheck
  default-language:    Haskell2010
  ghc-options: -Wall
